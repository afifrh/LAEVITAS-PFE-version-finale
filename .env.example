# Configuration d'environnement pour Laevitas Trading Platform
# Copiez ce fichier vers .env et remplissez les valeurs

# =============================================================================
# CONFIGURATION DE BASE
# =============================================================================

# Environnement (development, staging, production)
NODE_ENV=development

# Port de l'application
PORT=3000

# =============================================================================
# BASE DE DONNÉES
# =============================================================================

# MongoDB
MONGODB_URI=mongodb://localhost:27017/laevitas
MONGODB_TEST_URI=mongodb://localhost:27017/laevitas_test

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# AUTHENTIFICATION ET SÉCURITÉ
# =============================================================================

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Clés de chiffrement
ENCRYPTION_KEY=your-32-character-encryption-key

# CORS
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# API EXTERNES - CRYPTO
# =============================================================================

# Binance API
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=true

# CoinGecko API (optionnel)
COINGECKO_API_KEY=your-coingecko-api-key

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Slack (optionnel)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# MONITORING ET LOGS
# =============================================================================

# Niveau de log (error, warn, info, debug)
LOG_LEVEL=info

# Sentry (optionnel)
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# CI/CD ET DÉPLOIEMENT
# =============================================================================

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_PREFIX=your-org/laevitas

# SonarCloud
SONAR_TOKEN=your-sonar-token
SONAR_PROJECT_KEY=your-org_laevitas-trading-platform

# Snyk (optionnel)
SNYK_TOKEN=your-snyk-token

# =============================================================================
# CONFIGURATION FRONTEND
# =============================================================================

# API Backend URL
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Configuration des graphiques
REACT_APP_CHART_THEME=dark
REACT_APP_DEFAULT_PAIR=BTCUSDT

# =============================================================================
# CONFIGURATION DE DÉVELOPPEMENT
# =============================================================================

# Hot reload
CHOKIDAR_USEPOLLING=false

# Debug
DEBUG=laevitas:*

# =============================================================================
# CONFIGURATION DE TEST
# =============================================================================

# Base de données de test
TEST_MONGODB_URI=mongodb://localhost:27017/laevitas_test
TEST_REDIS_URL=redis://localhost:6379/1

# Timeout des tests (ms)
TEST_TIMEOUT=30000

# =============================================================================
# CONFIGURATION DE PRODUCTION
# =============================================================================

# Optimisations
NODE_OPTIONS=--max-old-space-size=4096

# Clustering
CLUSTER_WORKERS=auto

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-change-this-in-production

# =============================================================================
# MÉTRIQUES ET PERFORMANCE
# =============================================================================

# Prometheus (optionnel)
PROMETHEUS_PORT=9090

# Health check
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# SÉCURITÉ AVANCÉE
# =============================================================================

# CSP (Content Security Policy)
CSP_REPORT_URI=https://your-domain.report-uri.com/r/d/csp/enforce

# HSTS
HSTS_MAX_AGE=31536000

# =============================================================================
# VARIABLES SPÉCIFIQUES AUX ENVIRONNEMENTS
# =============================================================================

# Development
# NODE_ENV=development
# DEBUG=*
# LOG_LEVEL=debug

# Staging
# NODE_ENV=staging
# LOG_LEVEL=info
# MONGODB_URI=mongodb://staging-db:27017/laevitas

# Production
# NODE_ENV=production
# LOG_LEVEL=warn
# MONGODB_URI=mongodb://prod-db:27017/laevitas
# REDIS_URL=redis://prod-redis:6379